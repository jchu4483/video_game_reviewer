<div class="container">
  <% if @author.present? %>
    <h1>Reviews by: <%=@author.name%></h1>

    <%@author.reviews.each do |review|%>
      <li>
        <ul>
          <p>
            <%if review.title.present?%>
              <h5><a href="/reviews/<%=review.slug%>"><%=review.title%></a></h5> 
            <%end%>
          </p>
          <%if review.tags.present?%>
            <%review.tags.collect do |tag|%>
              <div class="chip">
                <a href="/tags/<%=tag.slug%>"><%=tag.name%></a>
                <i class="material-icons">close</i>
              </div>
            <%end%>
          <%end%>
        </ul>
      </li>
    <%end%>
  <%else%>
    <div class="center-align">
    <img src="/images/404.png" alt="404">
    </div>
  <%end%>
</div>
